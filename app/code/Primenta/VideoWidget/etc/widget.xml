<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
  <widget class="Primenta\VideoWidget\Block\Widget\Videowidget" id="toptal_customwidget_samplewidget">
    <label>Primenta Video Widget</label>
    <description></description>
    <parameters>
      <parameter name="videotitle" required="false" sort_order="10" visible="true" xsi:type="text">
        <label>Video Title (optional)</label>
      </parameter>
      <parameter name="videosource" required="true" sort_order="20" visible="true" xsi:type="select"
	      source_model="Primenta\VideoWidget\Model\VideoSource">
        <label>Video Source</label> 
      </parameter>
      <parameter name="videoid" required="true" sort_order="20" visible="true" xsi:type="text">
        <label>Video ID (ID only)</label>
      </parameter>
    </parameters>
  </widget>
</widgets>

